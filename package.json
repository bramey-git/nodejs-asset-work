{
    "name": "horizon-dev-hw",
    "version": "1.0.0",
    "description": "Coding homework for Horizon Developer candidates.",
    "main": "dist/main.js",
    "scripts": {
        "build:dev": "webpack --config config/webpack/webpack.dev.js --progress --profile",
        "build:prod": "webpack --config config/webpack/webpack.prod.js --progress --profile --bail",
        "build": "npm run build:dev",
        "clean:coverage": "npm run rimraf -- coverage",
        "clean:dist": "npm run rimraf -- dist",
        "clean:docs": "npm run rimraf -- docs",
        "clean:install": "npm run rimraf -- node_modules",
        "clean": "npm run clean:coverage && npm run clean:dist && npm run clean:docs && npm run clean:install",
        "eslint": "eslint",
        "jest": "jest --verbose --config=jest.config.json",
        "lint": "npm run eslint -- \"src/**/*.ts\"",
        "postinstall": "npm audit && npm run jest",
        "postversion": "git push && git push --tags && npm run clean:dist",
        "preversion": "npm test",
        "open": "open-cli",
        "rimraf": "rimraf",
        "start": "webpack serve --config config/webpack/webpack.dev.js",
        "test": "npm run lint && npm audit && npm run jest && open-cli coverage/lcov-report/index.html",
        "version": "npm run build:prod"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dfmedia/horizon-dev-hw.git"
    },
    "author": "John Harris",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dfmedia/horizon-dev-hw/issues"
    },
    "homepage": "https://github.com/dfmedia/horizon-dev-hw#readme",
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/plugin-proposal-class-properties": "^7.14.5",
        "@babel/plugin-proposal-decorators": "^7.14.5",
        "@babel/plugin-transform-runtime": "^7.14.5",
        "@babel/preset-env": "^7.14.7",
        "@babel/preset-react": "^7.14.5",
        "@types/express": "^4.17.13",
        "@types/jest": "^26.0.24",
        "@types/node": "^16.3.1",
        "@types/react": "^17.0.14",
        "@types/react-dom": "^17.0.9",
        "@typescript-eslint/eslint-plugin": "^4.28.2",
        "@typescript-eslint/eslint-plugin-tslint": "^4.28.2",
        "@typescript-eslint/parser": "^4.28.2",
        "babel-loader": "^8.2.2",
        "babel-plugin-parameter-decorator": "^1.0.16",
        "babel-plugin-transform-builtin-extend": "^1.1.2",
        "closure-webpack-plugin": "^2.5.0",
        "eslint": "^7.30.0",
        "generate-json-webpack-plugin": "^2.0.0",
        "google-closure-compiler": "^20210601.0.0",
        "html-webpack-plugin": "^5.3.2",
        "jest": "^27.0.6",
        "open": "^8.2.1",
        "open-cli": "^7.0.0",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "source-map-loader": "^3.0.0",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-mockito": "^2.6.1",
        "tslint": "^6.1.3",
        "typescript": "^4.3.5",
        "webpack": "^5.44.0",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^3.11.2",
        "webpack-merge": "^5.8.0",
        "webpack-node-externals": "^3.0.0"
    },
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    }
}
